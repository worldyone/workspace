#:kivy 1.0
MyRoot:

<Label>:
    font_size: 32

<MyRoot>:
    orientation: 'horizontal'
    Label:
        id: lbl
        value: 0
        text: str(self.value)
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Increase'
            on_press: lbl.value += 1
        Button:
            text: 'Reset'
            on_press: lbl.value = 0
